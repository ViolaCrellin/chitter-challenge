<!DOCTYPE html>
<html lang="en">
  <head>
    <title> Chitter </title>
    <!-- <link rel="stylesheet" href='sign_up.css' type='text/css'> -->
  </head>

  <body>
  <div>
    <h1> Chitter HQ <h1>
    <%= erb(:'user/logout')%>
    <form action="/post_peep" method="post">
      <label for="peep">
        Make a Peep:
        <% if flash[:peep_error] %>
        <%= flash[:peep_error] %>
        <% end %>
        <textarea rows="2" cols="50" name="peep">
        </textarea>
      </label>
      <label for="submit" class="submitform">
        <input type="submit" value="Word Vom">
      </label>
    </form>
  </div>

  <%@peeps.each do |peep| %>
  <div class="single_peep" >
    <div class="peep_text" >
      <h2><%= peep.peep_message %></h2>
    </div>
    <div class="peep_footer" >
      <p><%= readable_time(peep.created_at) %></p>
      <p><%= readable_date(peep.created_on) %></p>
    </div>
    <div class="author_info">
      <p><%= peep.author %></p>
    </div>
  </div>
  <% end %>

  </body>
</html>
